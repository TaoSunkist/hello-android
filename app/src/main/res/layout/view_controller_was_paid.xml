<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/view_controller_was_paid_body_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:src="@drawable/ic_threeline_img" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/margin_xlarge"
        android:layout_marginEnd="@dimen/margin_xlarge"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/view_controller_was_paid_agreement_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/user_profile_large"
            android:paddingBottom="@dimen/margin_xlarge"
            android:text="@string/agreement"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/view_controller_was_paid_to_lease_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/circle_button_default"
            android:background="@drawable/selector_login_button"
            android:text="Rent a powerbank"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/circle_button_default"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center"
            android:text="Wallet"
            android:textColor="@color/colorAccent" />
    </FrameLayout>

    <com.zhimeng.battery.ui.reusable.views.TitleBar
        android:id="@+id/view_controller_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:background_color="@android:color/transparent"
        app:left_image="@drawable/ic_arrow_back_black"
        app:line_enable="false"
        app:title_color="@android:color/black"
        app:title_text="PAYBY" />

</FrameLayout>