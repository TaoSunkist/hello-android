<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/common_id_coordinate_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_xlarge"
    android:paddingEnd="@dimen/margin_xlarge">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/view_controller_authentication_logo_imageview"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_xxxlarge"
            android:src="@drawable/logo"
            android:text="PayBy"
            android:textColor="@color/white"
            android:textSize="28dp" />

        <org.angmarch.views.NiceSpinner xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/view_controller_authentication_nice_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_xxxlarge"
            android:background="@drawable/selector"
            android:maxLines="1"
            android:text="**********"
            android:textSize="22sp"
            android:textStyle="bold"
            app:arrowDrawable="@drawable/ic_spinner_bottom_arrow"
            app:arrowTint="@android:color/transparent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/view_controller_authentication_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="@dimen/margin_xxlarge"
            android:layout_marginBottom="@dimen/circle_button_xlarge"
            android:background="@drawable/selector_login_button"
            android:enabled="false"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/view_controller_authentication_version_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="@dimen/margin_xlarge"
        android:text="1.0.0" />

</FrameLayout>
