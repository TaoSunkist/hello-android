<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#F0F0F0">
    <item
        android:id="@android:id/mask"
        android:width="50dp">
        <shape android:shape="rectangle">

            <gradient
                android:angle="0"
                android:centerColor="@color/colorMaskAccent"
                android:endColor="@color/colorMaskLightAccent"
                android:startColor="@color/colorMaskDarkAccent"
                android:type="linear" />
            <stroke android:width="0dp" />
            <corners android:radius="25dp" />
            <size
                android:width="100dp"
                android:height="@dimen/margin_xlarge" />
        </shape>
    </item>
    <item android:width="50dp">
        <shape android:shape="rectangle">

            <gradient
                android:angle="0"
                android:centerColor="@color/colorAccent"
                android:endColor="@color/colorLightAccent"
                android:startColor="@color/colorDarkAccent"
                android:type="linear" />
            <stroke android:width="0dp" />
            <corners android:radius="25dp" />
            <size
                android:width="100dp"
                android:height="@dimen/margin_xlarge" />
        </shape>
    </item>
</ripple>