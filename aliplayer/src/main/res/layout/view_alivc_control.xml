<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/controlbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/margin_xlarge"
        android:layout_marginEnd="@dimen/margin_xlarge"
        android:layout_marginBottom="@dimen/margin_xxxlarge"
        android:background="@drawable/bg_media_play_button_radius45"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/margin_medium"
        android:paddingTop="@dimen/margin_small"
        android:paddingEnd="@dimen/margin_large"
        android:paddingBottom="@dimen/margin_small">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/view_alivc_player_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_gradient_oval"
            android:padding="@dimen/margin_medium"
            android:src="@drawable/ic_video_pause" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/view_alivc_info_small_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_alivc_info_small_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_xlarge"
                android:text="00:00"
                android:textColor="@android:color/white" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/view_alivc_info_small_seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:background="@null"
                android:max="100"
                android:maxHeight="1dp"
                android:minHeight="1dp"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp"
                android:progressDrawable="@drawable/layer_view_video_menu_seekbar_drawable"
                android:thumb="@drawable/shape_oval_view_video_menu_seekbar_thumb" />

            <com.example.aliplayer.MutiSeekBarView
                android:id="@+id/view_alivc_info_small_mutiseekbar"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:thumbOffset="8dp"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_alivc_info_small_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@android:color/white" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</merge>